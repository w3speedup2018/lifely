{% assign faqSectionHeading = collection.metafields.faq.heading %}
{% assign faqSectionSubHeading = collection.metafields.faq.descripton %}
      {% if collection.metafields.faq.label.size > 0 and  faqSectionHeading != blnk %}
        <style>
          #accordion .card-header:after {
            font-family: "Font Awesome 5 Free";
            content: "\f068";
            float: right; 
          }
          #accordion .card-header.collapsed:after {
            font-family: "Font Awesome 5 Free";
            content: "\f067";
          }
          .collection_faq_main {
              display: flex;
              justify-content: space-between;
          }
          .collection_faq_main .faq_sectio_deatail {
              max-width: 25%;
          }
          .collection_faq_main  .faq_section_accordian {
              flex: 0 0 65%;
          }
          .collection_faq_main div#accordion .card {
              border-bottom: 1px solid #CFCFD0;
          }	
          .faq_sectio_deatail h2 {
              font-family: 'Gellix';
              font-style: normal;
              font-weight: 700;
              font-size: 32px;
              line-height: 40px;
              color: #000;
          }
          .faq_sectio_deatail p {
              font-family: 'Gellix';
              font-style: normal;
              font-weight: 400;
              font-size: 16px;
              line-height: 24px;
              color: #282828;
          }
          .collection_faq_main div#accordion .card-header h5 button {
              font-family: 'Gellix';
              font-style: normal;
              font-weight: 600;
              font-size: 20px;
              line-height: 28px;
              color: #282828;
              width: 100%;
              text-align: left;
              display: flex;
              align-items: center;
              justify-content: space-between;
              text-decoration: unset !important;
              padding: 8px 0 0 0;
          }
          .collection_faq_main div#accordion .card-header {
              background: transparent;
              padding: 0 !important;
          }
          .collection_faq_main .faq_section_accordian .card-body {
              padding: 0 !important;
            /* padding-top: 0 !important; */
              font-family: 'Gellix';
              font-style: normal;
              font-weight: 400;
              font-size: 16px;
              line-height: 24px;
              margin-top: 0px !important;
          }
          .collection-faq {
              padding: 51px 19px;
          }
        </style>  
        <div class="collection-faq">
            <div class="page-width">
                <div class="collection_faq_main">
                    <div class="faq_sectio_deatail">
                      {% if faqSectionHeading %}
                           <h2>{{ faqSectionHeading }}</h2>
                      {% endif %}
                      {% if faqSectionSubHeading != blank %}
                           {{ faqSectionSubHeading }}
                      {% endif %}
                    </div>                  
                    <div class="faq_section_accordian">
                        {% if collection.metafields.faq.label.size > 0 %}
                          <div id="accordion"> 
                            {% assign faq_desc = collection.metafields.faq.item_desc %}
                            {% for faq in  collection.metafields.faq.label %} 
                              {% assign index_faq = forloop.index0 %}
                              {% if faq != blank and  faq_desc[index_faq] != blank %}  
                              <div class="card">
                                  <div class="card-header" id="heading{{ index_faq }}">
                                    <h5 class="mb-0">
                                      <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse{{ index_faq }}" aria-expanded="false" aria-controls="collapseOne">
                                        {{ faq }}  <i class="fas fa-plus"></i>
                                      </button>
                                    </h5>
                                  </div>

                                  <div id="collapse{{ index_faq }}" class="collapse" aria-labelledby="heading{{ index_faq }}" data-parent="#accordion">
                                    <div class="card-body">
                                       {{ faq_desc[index_faq] }}
                                    </div>
                                  </div>
                              </div>
                            {% endif %}
                            {% endfor %}
                          </div>
                        {% endif %}
                    </div> 
                </div> 
            </div>  
        </div> 
      {% endif %}
{% schema %}
  {
    "name": "Faq"
  }
{% endschema %}
