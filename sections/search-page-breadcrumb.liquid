<div class="search_page_top">
  <div class="container">
  	<div class="clearance_breadcrumbs">
      <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
        <ol class="breadcrumbs__list">
          <li class="breadcrumbs__item">
            <a class="breadcrumbs__link" href="/">Home</a>
          </li>
          <li class="breadcrumbs__item">
            <span class="curent_page">Search results {% if search.terms != blank %}'{{ search.terms | escape }}'{% endif %}</span>
          </li>                        
        </ol>
      </nav>
    </div>
    {% if section.settings.heading != blank and  section.blocks != blank %}
      <div class="popular_search_section">
          <div class="popular_search_heading">{{section.settings.heading }}</div>
          <div class="popular-category-main">
            <div class="popular-cat-inner">           
              <div class="d-flex popular-cat-slider-mobile">
                   {% for block in section.blocks %}
                     {% if block.settings.title != blank and  block.settings.url != blank %}
                		 <span class="popular-cat-tags">
                              <a href="{{block.settings.url}}">{{block.settings.title}}</a>
                         </span>
                	 {% endif %} 
                   {% endfor %}                   
              </div>
            </div>
        </div>
      </div> 
     {% endif %}
  </div> 

</div>  
{% schema %}
  {
    "name": "Popular Search",
    "settings": [
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		}
	],
	"blocks":[
		{
          "type": "popular-items",
          "name": "Popular Search Item",
          "settings": [
            {
            "type": "text",
            "id": "title",
            "label": "Title"    
            },
			{
            "type": "text",
            "id": "url",
            "label": "Link"    
            }
          ]
        }
	]
  }
{% endschema %}

