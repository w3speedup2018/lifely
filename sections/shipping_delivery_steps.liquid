		border: 1px solid #AFBAA1;
	}
	section.shipping-steps-wrap .date-table table {
		border-width: 0px !important;
		border-collapse: separate;
		border-spacing: 0;
		width: 50%;
		margin-bottom: 25px;
	}
	section.shipping-steps-wrap .table-1 thead, .table-2 thead {
		background: #2C474B;
		color: #ffffff;
		border-top-left-radius: 6px;
		border-top-right-radius: 6px;
	}
	section.shipping-steps-wrap .date-table thead {
		border-width: 0px !important;
	}
	section.shipping-steps-wrap .date-table tbody {
		border-radius: 0px 0px 6px 6px;
		overflow: hidden;
	}
    .date-table .table-1 tbody td, .date-table .table-2 tbody td {
      font-family: 'Gellix';
      font-style: normal;
      font-weight: 500;
      font-size: 12px;
      line-height: 13px;
      color: #282828;
      padding: 5px 0px 5px 6px;
    }
	.date-table .table-1, .date-table .table-2, .date-table .table-1 td, .date-table .table-2 td {
		border: 1px solid #AFBAA1;
	}
	.date-table .table-2 {
		height: 100%;
		margin-left: 10px;
		width: 100%;
	}
	.date-table .table-2 {
		background: #F6F8F4;
	}
    section.shipping-steps-wrap .step-content p {
      font-family: 'Gellix';
      font-style: normal;
      font-weight: 500;
      font-size: 14px;
      line-height: 16px;
      color: #282828;
    }
    section.shipping-steps-wrap .step-image {
      padding-top: 20px;
    }
    section.shipping-steps-wrap .step-content {
      margin-bottom: 20px;
    }
    section.shipping-steps-wrap .step-btn a {
      background: #2C474B;
      border-radius: 100px;
      font-family: 'Gellix';
      font-style: normal;
      font-weight: 600;
      font-size: 18px;
      text-align: center;
      color: #FFFFFF;
      display: inline-block;
      padding: 10px 20px;
    }
    section.shipping-steps-wrap {
      padding: 50px 0;
    }
    section.shipping-steps-wrap .step-col-inner {
      background: #FCF9F4;
      padding: 20px 15px;
    }
    section.shipping-steps-wrap .col-md-4:first-child .step-content {
      margin-bottom: 0;
    }
    section.shipping-steps-wrap ul.steps {
      display: flex;
      flex-wrap: wrap;
      list-style: none;
      padding: 0;
    }
    section.shipping-steps-wrap ul.steps li {
      font-size: 14px;
      font-weight: 500;
      padding-right: 20px;
      padding-top: 10px;
      padding-bottom: 10px;
    }
    section.shipping-steps-wrap ul.steps li a {
      color: #282828;
    }
    section.shipping-steps-wrap ul.steps i {
      padding: 0px 15px;
      font-style: normal;
    }
  
    @media only screen and (max-width:767px){
      section.shipping-steps-wrap .step-head-desktop{
        display:none;
      }
      section.shipping-steps-wrap .step-head-mobile{
        display:block;
      }
      section.shipping-steps-wrap .step-col-inner {
        margin-bottom: 30px;
        border-radius: 10px;
      }
    }
    @media only screen and (max-width: 575px){
      section.shipping-steps-wrap .step-image img {
        width: auto;
      }
      section.shipping-steps-wrap .step-btn a{
        font-size: 14px;
      }
    }
    @media only screen and (max-width:360px){
      section.shipping-steps-wrap .step-col-inner {
        padding: 20px 10px;
      }
      .date-table .table-1 tbody td, .date-table .table-2 tbody td {
        padding: 2px 0px 2px 3px;
      }
      section.shipping-steps-wrap .step-image img {
        width: 100%;
      }
    }
  
  
</style>
{% endif %}
  
