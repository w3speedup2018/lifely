{% if section.blocks != blank %}
<section class="shipping-steps-wrap" style="background: {{ section.settings.background }};">
  <div class="container">
    <div class="row">
      {% for block in section.blocks %}
        {% assign step_heading = block.settings.step_heading %}
        {% assign step_subheading = block.settings.step_subheading %}
        {% assign step_subheading2 = block.settings.step_subheading2 %}
        {% assign step_content = block.settings.step_content %}
        {% assign step_img = block.settings.step_image %}
        {% assign step_button_text = block.settings.button_text %}
        {% assign step_button_url = block.settings.button_url %}

        {% if step_heading != blank or step_subheading != blank or step_subheading2 != blank or step_content != blank or step_img != blank or step_button_text != blank or step_button_url != blank %}
          <div class="col-md-4">
            <div class="step-col-inner">
              {% if step_heading != blank and step_subheading != blank %}
              <div class="step-head-desktop">
              {% if step_heading != blank %}
               <h2>{{ step_heading }}</h2>
              {% endif %}
              {% if step_subheading != blank %}
               <h3>{{ step_subheading }}</h3>
              {% endif %}
              </div>
              <div class="step-head-mobile">
                <h2>{{ step_heading }}: {{ step_subheading }}</h2>
              </div>
              {% else %}
                {% if step_heading != blank %}
                  <h2>{{ step_heading }}</h2>
                {% endif %}
                {% if step_subheading != blank %}
                  <h3>{{ step_subheading }}</h3>
                {% endif %}
              {% endif %}
          
              {% if step_subheading2 != blank %}
               <h5>{{ step_subheading2 }}</h5>
              {% endif %} 
              {% if step_content != blank %}
                <div class="step-content">{{ step_content }}</div>
              {% endif %} 
              {% if step_img != blank %}
               <div class="step-image"><img src="{{ step_img | img_url: "master" }}" alt="image"></div>
              {% endif %} 
              {% if step_button_text != blank %}
               <div class="step-btn"><a href="{{ step_button_url }}">{{ step_button_text }}</a></div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      
      {% endfor %}  
    </div>
  </div>
</section>
<style>
    section.shipping-steps-wrap .step-head-mobile{
      display:none;
    }
	section.shipping-steps-wrap .step-col-inner h2 {
		font-family: 'Gellix';
		font-style: normal;
		font-weight: 700;
		font-size: 16px;
		line-height: 18px;
		display: flex;
		align-items: center;
		text-align: center;
		color: #2C474B;
        margin-bottom: 15px;
	}
	section.shipping-steps-wrap .step-col-inner h3 {
		font-family: 'Gellix';
		font-style: normal;
		font-weight: 700;
		font-size: 16px;
		line-height: 18px;
		display: flex;
		align-items: center;
		text-align: center;
		color: #2C474B;
        margin-bottom: 15px;
	}
	section.shipping-steps-wrap .step-col-inner h5 {
		font-family: 'Gellix';
		font-style: normal;
		font-weight: 500;
		font-size: 14px;
		line-height: 16px;
		display: flex;
		align-items: center;
		color: #282828;
        margin-bottom: 15px;
	}
	section.shipping-steps-wrap .date-table thead th:first-child {
		border-radius: 6px 0px 0px 0px;
		overflow: hidden;
	}
	section.shipping-steps-wrap .date-table thead th {
		background-color: #2C474B;
		border: 0px;
		border-color: #2C474B;
	}
	section.shipping-steps-wrap .date-table .table-1 {
		background: #E4EFE5;
	}
	section.shipping-steps-wrap .date-table {
		display: flex;
	}
	.date-table th {
		padding: 4px 10px;
		text-transform: capitalize;
	}
