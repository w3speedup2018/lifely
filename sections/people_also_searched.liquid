{% if section.settings.heading != blank and section.blocks != blank %}
<div class="people_also_searched">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="inner_asdsa">
      {% for block in section.blocks %}
      	{% if block.settings.block_heading != blank and block.settings.url != blank %}
      		<a href="{{ block.settings.url }}">{{ block.settings.block_heading }}</a>
        {% endif %}
      {% endfor %}
    </div>
  </div> 
</div> 
{% endif %}
{% schema %}
  {
    "name": "People Also Searched",
    "settings": [
		{
			"type":"text",
			"id":"heading",
            "label":"Heading"
		}
	],
	"blocks": [
		{
			"type":"grid_item",
			"name":"Searched Item",
			"settings":[
				{
                    "type":"text",
                    "id":"block_heading",
                    "label":"Title"
                },
				{
                    "type":"text",
                    "id":"url",
                    "label":"Link"
                }
				
			]
		}
	]

  }
{% endschema %}

