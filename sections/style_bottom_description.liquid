{% if section.settings.heading != blank and section.settings.image != blank %}
	<div class="collection_bootom_description" style="background:{{ section.settings.bg }}">
        <div class="page-width">
            <div class="collection_bootom_description_inner">
                <div class="bootom_content_img">
                    <img class="lazy2 lazy3" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ section.settings.image | img_url:"master" }}" alt="">
                </div>  
                <div class="bootom_content_item">
                    <h2>{{ section.settings.heading }}</h2>
                    {{ section.settings.content }}
                </div>  
            </div>  
        </div>  
    </div>
{% endif %}
{% schema %}
  {
    "name": "Bottom Image with thex",
    "settings": [
		{
			"type":"text",
			"id":"heading",
			"label":"Heading"
		},
		{
			"type":"richtext",
			"id":"content",
			"label":"Description"
		},
		{
			"type":"image_picker",
			"id":"image",
			"label":"Image"
		},
		{
			"type":"color",
			"id":"bg",
			"label":"Background Color",
			"default":"#eceeea"
		}
	]
  }
{% endschema %}

