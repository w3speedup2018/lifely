{% if section.settings.heading != blank or  section.settings.subheading != blank %}
  {% style %}
      .master_campaign_coupon_inner_bar{
         background: {{section.settings.background_color}};
         padding:20px 0px;
         margin-top: 50px;
      }
      .master_campaign_coupon_inner_bar h2{
          font-family: 'Gellix';
          font-style: normal;
          font-weight: 500;
          font-size:24px;
          line-height:1.3px;
          text-transform: capitalize;
          color: #2C474B;
          margin-bottom: 0;
      }
    .master_campaign_coupon_inner_bar h2 b { font-family: 'bookmaniabold_italic'; }
    .master_campaign_coupon_inner_bar h2  path { fill:#2C474B; }
    .master_campaign_coupon_inner_bar h2 svg {       vertical-align:baseline; }
    
      .master_campaign_coupon_inner_bar h3{
          font-family: 'Gellix';
          font-style: normal;
          font-weight: 600;
          font-size: 40px;
          line-height: 45px;
          color: #F9F1E5;
      }

section.home_image_slider.collection_image_slider { background: #FBF9F3 !important; }
    
      @media only screen and (max-width: 991px){
          .master_campaign_coupon_inner_bar{
             margin-top: 20px;
          }
      }
  {% endstyle %}  
