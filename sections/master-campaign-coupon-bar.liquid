{% schema %}
  {
    "name": "Coupon Bar",
    "class":"master_campaign_coupon_bar",
    "settings": [
      {
        "type":"textarea",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"text",
        "id":"subheading",
        "label":"Heading"
      },
      {
        "type":"color",
