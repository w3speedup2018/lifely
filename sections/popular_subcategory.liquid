{% if collection.metafields.collections.list != blank %}
  {% assign popular_cat = collection.metafields.collections.list | split: '|' %}
  <div class="popular-category-main">
    <div class="container">
      <div class="popular-cat-inner">
        {% if collection.metafields.popular.collection_heading != blank %}
          <h3 class="desktop_heading_cat">{{collection.metafields.popular.collection_heading}}</h3> 
          <h3 class="mobile_heading_cat" style="display:none">Other Category</h3> 
        {% endif %}
        <div class="d-flex justify-content-center popular-cat-slider-mobile">
            {% for pcollection in popular_cat %}
          		{% assign othercollection = collections[pcollection] %}
          		{% if othercollection != blank %}	
                  <span class="popular-cat-tags">
                    <a href="{{othercollection.url}}">{{othercollection.title}}</a>
                  </span>
          		{% endif %}
            {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}	
