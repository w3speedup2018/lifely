{% assign description = collection.description %}
{% if description != blank %}  	
  	   <div class="collection_subcategory_description" {% if section.settings.color_code != blank%}style="background:{{section.settings.color_code}}"{% endif %}>
            <div class="page-width">
                <div class="collection_subcategory_description_inner" {% if section.settings.color_code != blank%}style="background:{{section.settings.color_code}}"{% endif %}>
                   <div class="collection-hero__subdescription" {% if section.settings.text_color != blank%}style="color:{{section.settings.text_color}}"{% endif %}>
                      <div class="top_content_item for__desktop">                         
                          <div class="desc-full collection_description">{{ description }}</div>
                      </div>      
                       <div class="top_content_item for__mobile">                          
                          <div class="desc-full collection_description">{{ description }} </div>
                      </div> 
                     </div>
                </div>  
            </div>
        </div>
{%- endif -%}

<script type="lazyload2">
  setTimeout(function() {
    jQuery('.collection_subcategory_description_inner .top_content_item .desc-half .read-more-content').on('click', function(){
        jQuery(this).closest('.top_content_item').find('.desc-half').hide();
        jQuery(this).closest('.top_content_item').find('.desc-full').show();
    })

    jQuery('.collection_subcategory_description_inner .top_content_item .desc-full .read-less-content').on('click', function(){
        jQuery(this).closest('.top_content_item').find('.desc-full').hide();
        jQuery(this).closest('.top_content_item').find('.desc-half').show();
    })
  })
</script>


{% schema %}
  {
    "name": "Top Description",
    "class": "collection_subcategory_top_description",
    "settings": [
		{
          "id": "color_code",
          "type": "color",
          "label": "Background Color",
		  "default":"#F6F8F4"
        },
		{
		  "type": "color",	
          "id": "text_color",
          "label": "Text Color",
		  "default":"#2C474B"	
        }
	]
  }
{% endschema %}

{% stylesheet %}
    {% if description != blank %} 
      .collection_subcategory_description_inner:after{
        display:none;
      }
     .collection_subcategory_description_inner {
          text-align: left !important;
      }
      .collection_subcategory_top_description{
        margin-top:0px !important;
      }
      .collection_subcategory_top_description .collection-hero__subdescription {
        max-width: 100% !important;
        margin: 0 auto;
        font-family: Gellix;
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 28px;
    }
    .collection_subcategory_template .collection-filters {
        margin-top: 0 !important;
    }
    .collection_subcategory_description {
        margin-bottom: 0px !important;
    }
  {% endif %}
{% endstylesheet %}

