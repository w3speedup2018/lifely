{{ 'section-blog-post.css' | asset_url | stylesheet_tag }}

<article class="article-template stories-template" itemscope itemtype="http://schema.org/BlogPosting">
  <div class="container">
      <div class="row">
        <div class="col-md-6">
          {% if article.image %}
          <img      
               src="{{ article.image | img_url: 'master' }}"
               loading="lazy"
               alt="{{ article.image.alt | escape }}">
          {%- endif -%}
        </div>
        <div class="col-md-6">
          <div class="article-content-short">
            <h1>{{ article.title }}</h1>
            <div class="story-small-desc">
              {%- if article.excerpt.size > 0 -%}
               {{ article.excerpt }}
              {%- else -%}
               {{ article.content | strip_html | truncate: 150 }}
              {%- endif -%}
            </div>
          </div>
        </div>  
        <div class="col-md-12">
          <div class="article-content-full">
            {{ article.content }}
          </div>
        </div>  
      </div>  
  </div>
</article>
{% schema %}
{
  "name": "t:sections.main-article.name",
  "tag": "section",
  "class": "section"
}
{% endschema %}
