{% if section.blocks.size > 0 and section.settings.show_cat_slider %}
	<div class="shop_category_slide">
		<div class="page-width">
      		<div class="shop_cat_slider_inner">
              <div class="shop_cat_slider">
                  {%- for block in section.blocks -%}
                     {% if block.settings.icon_image != blank and block.settings.title != blank %}
                        <div class="slide_item">
                            <a href="{{ block.settings.link }}">
                                <div class="category_slider_image">
                                  <img src="{{ block.settings.icon_image | img_url:"master" }}" alt="{{ block.settings.title }}"/>
                                 </div>  
                                <h3>{{ block.settings.title }}</h3>
                            </a>    
                        </div> 
                    {% endif %}
                  {% endfor %} 
              </div>  
           </div> 
      	</div>  
	</div>  
{% endif %}
{% schema %}
  {
    "name": "Category Slider",
    "settings": [
		{
		  "type":"checkbox",
		  "id":"show_cat_slider",
		  "label":"Show Category Slider"
		}
	],
	"blocks": [
        {
          "type": "image-slide",
          "name": "Category",
          "settings": [
			{
              "type": "image_picker",
              "id": "icon_image",
              "label": "Category Image"    
             },
			 {
              "type": "text",
              "id": "title",
              "label": "Category Name"    
             },
			 {
              "type": "url",
              "id": "link",
              "label": "Category Link"    
             }
          ]
        }
      ]	
  }
{% endschema %}

