{% if section.settings.show_newsletter %}
  <div class="blog_newsletter page-width page-width--narrow rte">
    <div class="blog_page_newsleter">
        {%- if section.settings.heading != blank or section.settings.subheading != blank or section.settings.content != blank -%}
            <div class="newsletter-content">
              {%- if section.settings.heading != blank %}
                <h2>{{ section.settings.heading }}</h2>
              {% endif %}
              {%- if section.settings.subheading != blank %}
                <h3>{{ section.settings.subheading }}</h3>
              {% endif %}
              {%- if section.settings.content != blank %}
                <div class="news_content">
                {{ section.settings.content }}
                </div>  
              {% endif %} 
            </div>
        {%- endif -%}
       <div class="blog_nsw_form"> <div class="klaviyo-form-RFmDME"></div></div>        
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Newsletter",
    "settings": [
		{
          "type": "checkbox",
          "id": "show_newsletter",
          "default": false,
          "label": "Enabel Newsletter"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
		{
          "type": "text",
          "id": "subheading",
          "label": "Sub Heading"
        },
		{
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
	]
  }
{% endschema %}

