<div class="register_form_bvanner" style="background:{{section.settings.banner_bg}}">
  <div class="register_form_bvanner_inner">
     {% if section.settings.banner_iamge != blank %}
    	<div class="banner_top_image">
          <img src="{{section.settings.banner_iamge | img_url:'master'}}" alt="">
      </div>
    {% endif %}
      <div class="banner_bottom_image">
        {% if section.settings.banner_logo != blank %}
        	<img src="{{section.settings.banner_logo | img_url:'master'}}" alt="">
        {% endif %}
        {% if section.settings.heading != blank %}
        		<h2>{{ section.settings.heading }}</h2>
         {% endif %}
      </div>
	</div>
</div> 
{% schema %}
  {
    "name": "Banner",
    "settings": [	
      {
		"type":"image_picker",
		"id": "banner_iamge",
		"label":"Banner Image"	
      },
	  {
		"type":"image_picker",
		"id": "banner_logo",
		"label":"Banner Logo"	
      },
	  {
		"type":"text",
		"id": "heading",
		"label":"Heading"	
      },
	  {
		"type":"color",
		"id": "banner_bg",
		"label":"Background Color"	
      }
	]
  }
{% endschema %}

