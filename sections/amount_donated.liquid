{% if section.settings.heading != blank %}
	<div class="habitat_donation_section">
		<div class="page-width">
          <div class="donation_inner">
            <h2>{{ section.settings.heading }}</h2>
            {% if section.settings.amount != blank %}
            <h3>{{ section.settings.amount }}</h3>
            {% endif %}
            {{ section.settings.description }}
          </div>  
      	</div>  
	</div>  
{% endif %}
{% schema %}
  {
    "name": "Amount Donated",
    "settings": [
		{
			"type":"text",
			"id":"heading",
            "label":"Heading"
		},
		{
			"type":"text",
			"id":"amount",
            "label":"Amount",
			"default":"$ <span>000</span>, <span>000</span>, <span>000</span>. <span>00</span>"
		},
		{
			"type":"richtext",
			"id":"description",
            "label":"Description"
		}
	]
  }
{% endschema %}

