{% if section.settings.heading != blank  or section.settings.sub_heading != blank or section.blocks != blank %}
	<section class="featured_section">
		<div class="container">
          <div class="row">
                {% if section.settings.heading != blank or section.settings.sub_heading != blank%}
                    <div class="col-12">
                        <div class="be-heading text-center">
                            {% if section.settings.heading != blank %}
                                <h2>{{ section.settings.heading }}</h2>
                            {% endif %}
                            {% if section.settings.sub_heading != blank %}
                                <p>{{ section.settings.sub_heading }} </p>
                            {% endif %}
                        </div>              
                    </div>
                {% endif %}
                {% if section.blocks and section.blocks != blank %}
                    <div class="col-12">
                      <div class="featured_logo_grid">                    	
                            {%- for block in section.blocks -%}
                              {% if block.settings.icon_image != blank %}
                                    <div class="image_slide">
									  {% if block.settings.link != blank %}
                                      		<a href="{{ block.settings.link }}"><img src="{{ block.settings.icon_image | img_url: 'master' }}" alt="{{ block.settings.icon_image.alt }}" class="img-fluid" /></a>
                                    	{% else %}
                                      		<img src="{{ block.settings.icon_image | img_url: 'master' }}" alt="{{ block.settings.icon_image.alt }}" class="img-fluid" />
                                      {% endif%}
                           			</div>  
                               {% endif %}	
                            {% endfor %}   
                      </div>  
                    </div>  
                 {% endif %}	
          </div> 
      	</div>  
	</section>  



{% endif %}
{% schema %}
  {
    "name": "Featured Logo",
    "settings": [
         {
            "id": "heading",
            "type": "text",
            "label": "Heading"
          },
          {
            "id": "sub_heading",
            "type": "textarea",
            "label": "Content"
          }
	],
	"blocks": [
        {
          "type": "image-slide",
          "name": "Featured Logo",
          "settings": [
			{
              "type": "image_picker",
              "id": "icon_image",
              "label": "Logo"    
			},
			{
              "type": "text",
              "id": "link",
              "label": "Link"    
			}
          ]
        }
      ]
  }
{% endschema %}

